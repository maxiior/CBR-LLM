{
  "prompt": {
    "name": "prompt_1",
    "tags": [
      {"column": "name", "key": "name", "value": "<NAME>", "source": "dataset"},
      {"column": "ingredients", "key": "ingredients", "value": "<INGREDIENTS>", "source": "dataset"},
      {"column": "steps", "key": "preparation", "value": "<STEPS>", "source": "dataset"},
      {"value": "<EXAMPLES>", "source": "langchain"}
    ],
    "number_of_most_common": 5,
    "response_structure": "name: <NAME> ; ingredients: <INGREDIENTS> ; preparation: <STEPS>"
  },
  "model": {
    "type": "gpt",
    "name": "gpt-3.5-turbo-instruct",
    "params": {
      "temperature": 0,
      "response_format": "json"
    }
  },
  "datasets": {
    "file_name": "RAW_recipes.csv",
    "columns_to_extract": [
      "id",
      "name",
      "n_steps",
      "steps",
      "ingredients",
      "n_ingredients"
    ],
    "columns_to_mask": [
      "name",
      "steps",
      "ingredients"
    ],
    "mask_tag": "<MASK>",
    "proportions": {
      "train": 0.3,
      "valid": 0.05,
      "test": 0.35,
      "langchain": 0.3
    },
    "target_files_prefix": "auto_1"
  },
  "validation": {
    "bleu_threshold": 0,
    "meteor_threshold": 0,
    "cosine_distance_threshold": 0,
    "spice_threshold": 0,
    "cider_threshold": 0
  }
}
